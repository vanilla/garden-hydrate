{
    "name": "vanilla/garden-hydrate",
    "description": "A JSON based templating language for data.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Todd Burry",
            "email": "todd@vanillaforums.com"
        }
    ],
    "require": {
        "vanilla/garden-jsont": "^1.2",
        "vanilla/garden-schema": "~1.10.2",
        "vanilla/standards": "^1.3",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Garden\\Hydrate\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Garden\\Hydrate\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~8.0",
        "vimeo/psalm": "^3.13"
    },
    "config": {
        "platform": {
            "php": "7.2"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=./vendor/vanilla/standards/code-sniffer/Vanilla ./src"
    }
}
